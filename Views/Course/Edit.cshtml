@model SchoolExample.Models.Course

<h3>Edit Course</h3>
<form asp-action="Edit" method="post">
    <label asp-for="Title"></label>
    <input asp-for="Title" value="@Model.Title" />
    <input type="hidden" value="@Model.Id" asp-for="Id" />
    <input type="submit" value="Edit"/>
</form>